<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.shop.cn.common.dao.UserAdminDao">
    
    <resultMap id="UserMapper" type="com.shop.cn.common.pojo.User">
        <result property="userId" column="user_id"></result>
        <result property="userName" column="user_name"></result>
        <result property="nickName" column="nick_name"></result>
        <result property="password" column="password"></result>
        <result property="photo" column="photo"></result>
        <result property="mail" column="mail"></result>
        <result property="phone" column="phone"></result>
    </resultMap>

    <resultMap id="AdminMapper" type="com.shop.cn.common.pojo.Admin">
        <result property="adminId" column="admin_id"></result>
        <result property="adminName" column="admin_name"></result>
        <result property="password" column="password"></result>
        <result property="photo" column="photo"></result>
        <result property="mail" column="mail"></result>
        <result property="phone" column="phone"></result>
        <result property="superAdmin" column="super_admin"></result>
    </resultMap>
    <select id="findUserInSystem" parameterType="java.lang.Long" resultMap="UserMapper">
        SELECT * FROM user WHERE user_id=#{_parameter}
    </select>

    <select id="adminLogin" parameterType="com.shop.cn.common.pojo.Admin" resultMap="AdminMapper">
        SELECT * FROM admin WHERE password=#{password} and admin_name=#{adminName} and super_admin=#{superAdmin}
    </select>
</mapper>